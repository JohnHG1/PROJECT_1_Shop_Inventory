<h1>Products</h1>

<table>
  <tr>
    <th>Name</th>
    <th></th>
    <th>Description</th>
    <th></th>
    <th>Supplier_id</th>
    <th></th>
    <th>Cost</th>
    <th></th>
    <th>Retail</th>
  </tr>
  <% for product in @products %>
  <tr>
    <td><a href="/products/<%= product.id %>"><%= product.name %></a></td>
    <td>|</td>
    <td><%= product.description %></td>
    <td>|</td>
    <td><%= product.supplier_id %></td>
    <td>|</td>
    <td><%= product.cost %></td>
    <td>|</td>
    <td><%= product.retail %></td>
  </tr>
  <% end %>
</table>
